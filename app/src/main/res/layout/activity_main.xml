<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tx_animation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Animation"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/tx_decoration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Decoration"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/tx_linear_snap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LinearSnap"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/tx_pager_snap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PagerSnap"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/tx_diff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AsyncListDiff"
        android:padding="10dp"/>
</LinearLayout>